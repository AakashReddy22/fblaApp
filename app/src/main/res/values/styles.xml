<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/slideActivityAnimation</item>
    </style>

    <style name="slideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/move_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/move_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/move_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/move_right_out</item>
    </style>

</resources>