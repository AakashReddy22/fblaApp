<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Officers">

    <TextView
        android:id="@+id/officerTitle"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Officers"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/officerTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/councilHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Executive Council"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/councilText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Co-Presidents - Milan Chokshi and Johanna Chien \n Chief Operations Officer - Zibran Vastani \n Chief Executive Officer - Jonathan McLatcher
"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/otherMembersHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Other Officials"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/otherMembersText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VP of Membership/Recruitment - Andrew Lee
 \n VP of Finances - Mehul Dhoot
 \n VP of Competitions - Divya Mallemadugula
 \n VP of Community Service and Fundraising- Ayush Karnik
 \n VP of WebMaster -  Amber Dong
 \n VP of Communications and Reporter- Garrett Halak
 \n Secretary - Nicole Li
 \n Parliamentarian - Oghenefegiro Agboro"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pictures"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32dp" />

            <ImageView
                android:id="@+id/clubFair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/club_fair"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                >
            </ImageView>

            <ImageView
                android:id="@+id/clubFair2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/club_fair2"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"

                >
            </ImageView>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>