<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="355dp"
        android:layout_height="47dp"
        android:text="About FBLA in JCHS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="531dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/competitionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Competitions"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/competitionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/compText"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/educateHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Educate"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/educateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eduText"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/communityHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Community Service"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/communityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/communText"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/immersionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Immersion"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/immersionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/communText"
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>